@page
@using PlantPlacesSpecimens;
@model IndexModel
@{
    ViewData["Title"] = "My Plant Diary";
    var brand = ViewData["Brand"];
    List<Specimen> specimens = (List<Specimen>) ViewData["Specimens"];
    var weatherMessage = ViewData["WeatherMessage"];
}

<div class="text-center">
    <h1 class="display-4">Welcome to @brand</h1>
    <p>You can...
        <ul>
            <li>Search for plants</li>
            <li>Add events to a plant (water, fertlizer, etc.)</li>

        </ul>
        <strong>@weatherMessage</strong>
        <table>
            <tr>
                <th>Plant ID</th>
                <th>Specimen ID</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Address</th>
            </tr>
            @{
                foreach(Specimen specimen in specimens)
                {
                    <tr>
                        <td>@specimen.PlantId</td>
                        <td>@specimen.SpecimenId</td>
                        <td>@specimen.Lat</td>
                        <td>@specimen.Lng</td>
                        <td>@specimen.Address</td>
                    </tr>
                }
            }
        </table>
    </p>
</div>
